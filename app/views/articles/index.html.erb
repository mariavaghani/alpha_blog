<div class="container" id="container-about">
  <%= render 'layouts/alpha_blog_logo_header' %>
</div>
<div class="container" id="container-about">
  <h1>Articles listings</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Genre</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @article_list.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= article.genre %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article), method: :delete,
          data: { confirm: "Are you sure you want to delete article #{article.title}?" } %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
  <p><%= link_to 'Create New Article', new_article_path  %></p>
</div>
